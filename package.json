{
  "name": "octaform",
  "version": "1.5.0",
  "description": "Octaform is designed to help developers easily validate forms, being completely agnostic to the framework.",
  "main": "./src/octaform.js",
  "homepage": "https://github.com/octaform/octaform#readme",
  "author": "Octaform",
  "license": "MIT",
  "bugs": "https://github.com/octaform/octaform/issues",
  "keywords": [
    "octaform",
    "octa",
    "form",
    "forms",
    "formjs",
    "form validation",
    "validation",
    "react",
    "angular",
    "vue",
    "javascript",
    "vanilla"
  ],
  "scripts": {
    "test": "jest -c ./test/jest/config.prod.json --colors",
    "test:dev": "jest -c ./test/jest/config.dev.json --colors --watchAll",
    "build": "npm run clean && webpack -p --progress --config ./webpack/config.prod.js",
    "build:dev": "npm run clean && webpack -p --config ./webpack/config.dev.js",
    "clean": "rimraf dist",
    "deploy": "yarn install && yarn test:prod && yarn build:prod && npm publish dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/octaform/octaform"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "circular-dependency-plugin": "4.4.0",
    "copy-webpack-plugin": "4.5.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^23.3.0",
    "generate-json-webpack-plugin": "^0.3.0",
    "glob": "^7.1.2",
    "jest": "^24.9.0",
    "jsdom": "^11.7.0",
    "rimraf": "^2.6.2",
    "unminified-webpack-plugin": "1.4.2",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^2.0.9",
    "webpack-merge": "^4.1.2"
  }
}
